# LINE Bot Configuration
# ได้จาก LINE Developers Console > Messaging API
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CHANNEL_ID=your_line_channel_id_here
LINE_BOT_ID=@your_bot_id

# Supabase Configuration
# ได้จาก Supabase Dashboard > Settings > API
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Security
# สร้าง secret key สำหรับ API authentication
API_SECRET_KEY=your_api_secret_key_for_iot_devices

# Application Configuration
BASE_URL=your_base_url_here
PORT=3000
NODE_ENV=development

# Optional: Rich Menu Configuration
RICH_MENU_ID=richmenu-your-menu-id
RICH_MENU_IMAGE_URL=https://your-domain.com/rich-menu-image.png

# Optional: Webhook URL for LINE
WEBHOOK_URL=https://your-domain.com/webhook

# Optional: Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Optional: Geofence Configuration
SCHOOL_LATITUDE=13.7563
SCHOOL_LONGITUDE=100.5018
GEOFENCE_RADIUS_METERS=500

# Optional: Emergency Configuration
EMERGENCY_PHONE=+66812345678
EMERGENCY_EMAIL=emergency@school.com

# Optional: File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=uploads/

# Optional: Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600