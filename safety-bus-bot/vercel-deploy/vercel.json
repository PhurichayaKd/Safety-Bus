{
  "version": 2,
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    },
    "api/*.mjs": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/webhook",
      "destination": "/api/webhook.mjs"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/leave-form",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}