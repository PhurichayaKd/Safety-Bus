{
  "functions": {
    "index.mjs": {
      "runtime": "@vercel/node@3.1.0"
    },
    "api/**/*.js": {
      "runtime": "@vercel/node@3.1.0"
    },
    "api/**/*.mjs": {
      "runtime": "@vercel/node@3.1.0"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/leave-form",
      "destination": "/leave-form.html",
      "permanent": false
    },
    {
      "source": "/leave-request", 
      "destination": "/leave-request.html",
      "permanent": false
    },
    {
      "source": "/bus-location",
      "destination": "/bus-location.html",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/leave-form",
      "destination": "/leave-form.html"
    },
    {
      "source": "/leave-request", 
      "destination": "/leave-request.html"
    },
    {
      "source": "/bus-location",
      "destination": "/bus-location.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/expire-cards",
      "schedule": "0 6 * * *"
    }
  ]
}